# Telegram Bot Configuration
TELEGRAM_TOKEN=your_bot_token_here
ADMIN_IDS=[123456789]

# Database Configuration
DB_URL=sqlite+aiosqlite:///./data/nursia.db

# Security Configuration
# For development: ENVIRONMENT=development, DEBUG=true, FORCE_HTTPS=false
# For production: ENVIRONMENT=production, DEBUG=false, FORCE_HTTPS=true
ENVIRONMENT=development
DEBUG=true

# CORS Origins
# For development: http://localhost:3000,http://127.0.0.1:3000
# For production: https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Settings
FORCE_HTTPS=false
RATE_LIMIT_ENABLED=false
SECURITY_HEADERS_ENABLED=true

# JWT Configuration
# IMPORTANT: Generate a strong random key for production!
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30